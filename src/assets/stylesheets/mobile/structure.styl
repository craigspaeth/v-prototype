@import 'common'

body.is-mobile
  width 100%
  height 100%
  overflow hidden
  user-select none

#mobile
  overflow hidden
  height 100%

.panes
  height 100%
  white-space nowrap
  font-size 0
  vertical-align top
  transition-property transform
  transition-duration 0.5s
  transition-timing-function ios-timing-function
  transform translate3d(0, 0, 0)

.pane
  position relative
  display inline-block
  width 100%
  height 100%
  vertical-align top
  white-space normal
  overflow hidden

.pane--overlay
  gradient-overlay()
  z-index 0

.pane--backdrop
  occupy()
  z-index -1
  > img
    display block
    position absolute
    top 50%
    left 50%
    opacity 0
    transition opacity 0.5s
    &.is-ready
      opacity 1

.pane--body
  occupy()
  z-index 2
  padding 10%
  font-size (headline-size / 1.75)
  > p
    clearfix()

.pane--links
  float left
  font-size (headline-size / 2)
  margin-top unit
  padding-top (unit / 2)
  border-top 2px solid white
  > a
    display block
    color white
    text-decoration none

.pane--logo
  display inline-block
  height (unit * 2)
  margin-bottom (unit * 2)

.pane--bottom
  position absolute
  bottom 15%
  left 0
  right 0
  padding-right 10%
  margin-left 10%
  font-size (headline-size / 1.5)

.pane--chevron
  position absolute
  width unit
  top 50%
  right @width
  height @width
  margin-top -(@width / 2)
  z-index 1
  border 2px solid white
  border-width 2px 2px 0 0
  transform rotate(45deg)

.pane--share
  position absolute
  bottom 15%
  right 10%
  text-align center
  > h3
    font-size 12px
    font-weight normal
    text-transform uppercase
    letter-spacing 2px
.pane--share_facebook
.pane--share_twitter
  display inline-block
  width (unit * 2)
  height @width
  margin 0 (unit / 4)
  font-size 14px
  line-height (unit * 1.5)

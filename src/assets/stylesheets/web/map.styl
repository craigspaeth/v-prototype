@import 'common'

for n in 0 1
  #map-headline-{n}
    opacity 0

.map
  position absolute
  top (grid-offset / 2)
  right grid-offset
  bottom (grid-offset / 2)
  left grid-offset
  > img
    width 100%
    height 100%

#connections
  occupy()
  > svg
    width 100%
    height 100%
    path
      stroke yellow-color
      stroke-width 0.5
      fill none
      opacity 0.75
      transition stroke-dashoffset 0.75s ease-in-out

  &.is-transitioning
    path
      stroke-dashoffset 0 !important
